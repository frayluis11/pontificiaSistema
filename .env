# ===============================================================================
# SISTEMA PONTIFICIA - CONFIGURACIÓN GLOBAL
# Variables de entorno para desarrollo y producción
# ===============================================================================

# ===============================================================================
# CONFIGURACIÓN GENERAL
# ===============================================================================
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ===============================================================================
# MYSQL - CREDENCIALES PRINCIPALES
# ===============================================================================
MYSQL_ROOT_USER=root
MYSQL_ROOT_PASSWORD=root

# ===============================================================================
# BASES DE DATOS - AUTH SERVICE
# ===============================================================================
MYSQL_AUTH_HOST=localhost
MYSQL_AUTH_PORT=3307
MYSQL_AUTH_DB=auth_db
MYSQL_AUTH_USER=auth_user
MYSQL_AUTH_PASSWORD=auth_password_123

# ===============================================================================
# BASES DE DATOS - USERS SERVICE
# ===============================================================================
MYSQL_USERS_HOST=localhost
MYSQL_USERS_PORT=3308
MYSQL_USERS_DB=users_db
MYSQL_USERS_USER=users_user
MYSQL_USERS_PASSWORD=users_password_123

# ===============================================================================
# BASES DE DATOS - ASISTENCIA SERVICE
# ===============================================================================
MYSQL_ASISTENCIA_HOST=localhost
MYSQL_ASISTENCIA_PORT=3309
MYSQL_ASISTENCIA_DB=asistencia_db
MYSQL_ASISTENCIA_USER=asistencia_user
MYSQL_ASISTENCIA_PASSWORD=asistencia_password_123

# ===============================================================================
# BASES DE DATOS - DOCUMENTOS SERVICE
# ===============================================================================
MYSQL_DOCUMENTOS_HOST=localhost
MYSQL_DOCUMENTOS_PORT=3310
MYSQL_DOCUMENTOS_DB=documentos_db
MYSQL_DOCUMENTOS_USER=documentos_user
MYSQL_DOCUMENTOS_PASSWORD=documentos_password_123

# ===============================================================================
# BASES DE DATOS - PAGOS SERVICE
# ===============================================================================
MYSQL_PAGOS_HOST=localhost
MYSQL_PAGOS_PORT=3311
MYSQL_PAGOS_DB=pagos_db
MYSQL_PAGOS_USER=pagos_user
MYSQL_PAGOS_PASSWORD=pagos_password_123

# ===============================================================================
# BASES DE DATOS - AUDITORIA SERVICE
# ===============================================================================
MYSQL_AUDITORIA_HOST=localhost
MYSQL_AUDITORIA_PORT=3312
MYSQL_AUDITORIA_DB=auditoria_db
MYSQL_AUDITORIA_USER=auditoria_user
MYSQL_AUDITORIA_PASSWORD=auditoria_password_123

# ===============================================================================
# BASES DE DATOS - REPORTES SERVICE
# ===============================================================================
MYSQL_REPORTES_HOST=localhost
MYSQL_REPORTES_PORT=3313
MYSQL_REPORTES_DB=reportes_db
MYSQL_REPORTES_USER=reportes_user
MYSQL_REPORTES_PASSWORD=reportes_password_123

# ===============================================================================
# REDIS - CACHE Y COLA DE TAREAS
# ===============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Configuración específica para Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===============================================================================
# JWT - CONFIGURACIÓN DE TOKENS
# ===============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_LIFETIME=60  # minutos
JWT_REFRESH_TOKEN_LIFETIME=10080  # 7 días en minutos
JWT_ALGORITHM=HS256

# ===============================================================================
# CORS - CONFIGURACIÓN DE ORÍGENES
# ===============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=True

# ===============================================================================
# SERVICIOS - PUERTOS
# ===============================================================================
AUTH_SERVICE_PORT=3001
USERS_SERVICE_PORT=3002
ASISTENCIA_SERVICE_PORT=3003
DOCUMENTOS_SERVICE_PORT=3004
PAGOS_SERVICE_PORT=3005
AUDITORIA_SERVICE_PORT=3006
REPORTES_SERVICE_PORT=3007
GATEWAY_SERVICE_PORT=8000

# ===============================================================================
# LOGGING - CONFIGURACIÓN
# ===============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ===============================================================================
# EMAIL - CONFIGURACIÓN (OPCIONAL)
# ===============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ===============================================================================
# ARCHIVOS Y MEDIA
# ===============================================================================
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/static
MAX_UPLOAD_SIZE=10485760  # 10MB en bytes

# ===============================================================================
# SEGURIDAD
# ===============================================================================
SECURE_SSL_REDIRECT=False
SECURE_PROXY_SSL_HEADER=None
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False