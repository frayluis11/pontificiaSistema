# Configuración de entorno para desarrollo local
# Copiar este archivo como .env y ajustar valores según necesidad

# Django
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=your-secret-key-for-development-only
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Base de datos MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3313
MYSQL_DATABASE=auditoria_db
MYSQL_USER=auditoria_user
MYSQL_PASSWORD=auditoria_password

# Configuración de auditoría
AUDIT_ENABLE_MIDDLEWARE=True
AUDIT_LOG_ANONYMOUS_USERS=False
AUDIT_LOG_REQUEST_BODY=True
AUDIT_MAX_BODY_LENGTH=10000
AUDIT_RETENTION_DAYS=90
AUDIT_CRITICAL_RETENTION_DAYS=365

# Observer configuration
OBSERVER_ENABLED=True
OBSERVER_WEBHOOK_TIMEOUT=5

# URLs de otros microservicios
AUTH_SERVICE_URL=http://localhost:3001
USERS_SERVICE_URL=http://localhost:3002
ATTENDANCE_SERVICE_URL=http://localhost:3003
PAYMENTS_SERVICE_URL=http://localhost:3004
DOCUMENTS_SERVICE_URL=http://localhost:3005
REPORTS_SERVICE_URL=http://localhost:3006

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_ALL_ORIGINS=True

# Email (para notificaciones de auditoría críticas)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=True
LOG_FILE_PATH=/tmp/auditoria.log

# Performance
DATABASE_CONN_MAX_AGE=60
DATABASE_CONN_HEALTH_CHECKS=True

# Security
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Cache (Redis opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=300